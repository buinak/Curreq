<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SettingsScreen.SettingsActivity">

    <CheckBox
        android:id="@+id/settings_auto_updates_checkbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Daily auto-updates"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_debugPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toStartOf="@+id/button_changePassword"
        app:layout_constraintStart_toStartOf="@+id/settings_auto_updates_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/settings_auto_updates_checkbox" />

    <Button
        android:id="@+id/button_changePassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="Change Password"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/settings_auto_updates_checkbox"
        app:layout_constraintTop_toBottomOf="@+id/settings_auto_updates_checkbox" />

</androidx.constraintlayout.widget.ConstraintLayout>